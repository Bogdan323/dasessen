<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base App Theme -->
    <style name="AppTheme"
        parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:paddingEnd">@dimen/radio_button_padding</item>
        <item name="android:paddingStart">@dimen/radio_button_padding</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
    </style>
    
<!--    Details activity style-->
    <style name="DetailFragmentStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

<!--    Custom Tab Layout-->
    <style name="CustomTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="background">@color/actionBarBackgroundColor</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>
    <style name="CustomTabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/white</item>
    </style>
    
<!--    Chip style-->
    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="checkedIconTint">@color/chip_text_color</item>
    </style>

    <style name="TextAppearance.Cupcake.Subtitle1"
        parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">18sp</item>
    </style>


    <style name="Widget.Cupcake.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">?attr/textAppearanceSubtitle1</item>
    </style>


    <style name="Widget.Cupcake.TextView.FinalPrice" parent="Widget.Cupcake.TextView">
        <item name="android:textAllCaps">true</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
    </style>


    <style name="Widget.Cupcake.TextView.Label" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAllCaps">true</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
    </style>


    <style name="Widget.Cupcake.TextView.OrderSummary" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="Widget.Cupcake.CompoundButton.RadioButton"
        parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:paddingEnd">@dimen/radio_button_padding</item>
        <item name="android:paddingStart">@dimen/radio_button_padding</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
    </style>


    <style name="Widget.Cupcake.Divider" parent="">
        <item name="android:background">?attr/dividerHorizontal</item>
    </style>

</resources>